{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/": ["./src/"]
    }
  },
  "include": [
    "next-env.d.ts",
    "/*.ts",
    "/*.tsx",
    ".next/types//*.ts",
    "convex//*"
  ],
  "exclude": ["node_modules"]
}